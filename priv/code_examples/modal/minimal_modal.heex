<button phx-click={Livekit.Modal.open("quick-modal")}>
  Open Modal
</button>

<Livekit.Modal.modal id="quick-modal">
  <.modal_overlay class="fixed inset-0 bg-black/50" />
  
  <div class="fixed inset-0 flex items-center justify-center p-4">
    <.modal_panel id="modal-panel" class="bg-white rounded p-6">
      <p>Hello Modal!</p>
      <button phx-click={Livekit.Modal.close()}>Close</button>
    </.modal_panel>
  </div>
</Livekit.Modal.modal>